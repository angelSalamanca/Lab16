<Window x:Class="testDG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimpleDataGridSample" Height="400" Width="840">
    <Grid Margin="10">
        <DataGrid Name="DG1" 
                  IsReadOnly="True"
                  AutoGenerateColumns="False" CanUserSortColumns="False">
            <DataGrid.RowHeaderTemplate>
            <DataTemplate>
                <ToggleButton x:Name="RowHeaderToggleButton"
					              Click="expand"
					              Cursor="Hand" />
            </DataTemplate>
            </DataGrid.RowHeaderTemplate>
            <DataGrid.Columns>
                <DataGridTextColumn Width="200" Header="Name" Binding = "{Binding name}" />
                <DataGridTextColumn Width="100" Header="# Goods" Binding = "{Binding numGoods}" />
                <DataGridTextColumn Width="100" Header="# Bads" Binding = "{Binding numBads}"/>
                <DataGridTextColumn Width="100" Header="# Accepts" Binding = "{Binding numAccepts}"/>
                <DataGridTextColumn Width="100" Header="# Total" Binding = "{Binding numTotal}"/>
                <DataGridTextColumn Width="100" Header="Odds" Binding = "{Binding Odds}"/>
                <DataGridTextColumn Width="*" Header="Bad rate" Binding = "{Binding badRate}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

